import pymongo

cliente = pymongo.MongoClient("mongodb://localhost:30002/")

banco_dados = cliente["alarme_db"]

colecao = banco_dados["status"]

documento = {"intensidade": 50}
resultado = colecao.insert_one(documento)
print(f"Inserido ID: {resultado.inserted_id}")

documentos = colecao.find()
for doc in documentos:
    print(doc)

